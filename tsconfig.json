{
  "compilerOptions": {
    "module": "ESNext",
    "allowJs": false,
    "baseUrl": "src",
    "moduleResolution": "node",
    "importHelpers": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "dist",
    "target": "ES2018",
    "typeRoots": ["./node_modules/@webgpu/types", "./node_modules/@types"]
  },
  "exclude": ["node_modules", "dist"]
}
